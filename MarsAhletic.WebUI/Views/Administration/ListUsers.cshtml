@using MarsAhletic.WebUI.Models
@{
    ViewBag.Title = "M-Port | Kullanıcı Listesi";
}
@model IEnumerable<ApplicationUser>

<div class="row">
    <div class="col-sm-12">
        <div class="btn-group pull-right m-t-15">
            <button type="button" class="btn btn-default dropdown-toggle waves-effect waves-light" data-toggle="dropdown" aria-expanded="false">İşlemler <span class="m-l-5"><i class="fa fa-cog"></i></span></button>
            <ul class="dropdown-menu drop-menu-right" role="menu">
                <li><a href="@Url.Action("AddNewUser", "Administration")">Yeni Kullanıcı Ekle</a></li>
            </ul>
        </div>

        <h4 class="page-title">Kullanıcılar</h4>
        <ol class="breadcrumb">
            <li>
                <a href="javascript:void(0);">Ayarlar</a>
            </li>
            <li class="active">
                Kullanıcılar
            </li>
        </ol>
        <p class="text-muted page-title-alt">Sistemde kullanıcıları aktif/deaktif yapabilirsiniz veya kaldırabilirsiniz.</p>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <div class="card-box table-responsive">

            <table id="datatable-buttons" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Adı Soyadı</th>
                        <th>Kullanıcı</th>
                        <th>Giriş Hesabı</th>
                        <th>Durum</th>
                        <th>Yetki</th>
                        <th>İşlem</th>
                    </tr>
                </thead>


                <tbody>

                    @foreach (ApplicationUser item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@(item.LoginAccount == null ? "Giriş Hesabı Bulunamadı" : item.LoginAccount.Name)</td>
                            <td>@item.Username</td>
                            <td>@(item.LoginAccount == null ? "Giriş Hesabı Bulunamadı" : item.LoginAccount.UserName)</td>
                            <td>@(item.IsDisabled ? "Deaktif" : "Aktif") </td>
                            <td>@(item.IsDeptManager ? "Yönetici" : "Kullanıcı")</td>
                            <td>
                                <a href="@Url.Action("EditUser", "Administration", new {id = @item.Id })" class="btn btn-icon waves-effect waves-light btn-info"> <i class="fa fa-edit"></i> </a>
                                <a href="@Url.Action("DeleteUserConfirmation", "Administration", new {id = @item.Id })" class="btn btn-icon waves-effect waves-light btn-danger " data-id="@item.Id"> <i class="fa fa-remove"></i> </a>
                            </td>
                        </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>

