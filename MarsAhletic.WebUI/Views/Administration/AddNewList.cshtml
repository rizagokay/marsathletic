
@{
    ViewBag.Title = "M-Port | Yeni Liste Ekleme";
}

@using MarsAhletic.WebUI.Models
@model AddNewListViewModel

<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title">Tanımlı Listeler</h4>
        <ol class="breadcrumb">
            <li>
                <a href="javascript:void(0);">Ayarlar</a>
            </li>
            <li>
                Tanımlı Listeler
            </li>
            <li class="active">
                Yeni Liste Ekle
            </li>
        </ol>
        <p class="text-muted page-title-alt">İndirilebilecek excel listelerini buradan yükleyebilir ve düzenleyebilirsiniz.</p>
    </div>
</div>


<div class="row">
    <div class="col-sm-6">
        <div class="card-box">
            <form method="post" action="@Url.Action("AddNewList")" enctype="multipart/form-data" data-parsley-validate>
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label>Liste İsmi:</label>
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", required=true })
                </div>
                <div class="form-group">
                    <label>Doküman:</label>
                    @Html.TextBoxFor(m => m.FilePath, new { @class = "filestyle", @data_size = "sm", type = "file", required=true })
                </div>
                <input type="submit" class="btn btn-primary" value="Kaydet" />
            </form>
        </div>
    </div>
</div>

@section finaljscodes{
    <script src="@Url.Content("~/assets/plugins/bootstrap-filestyle/js/bootstrap-filestyle.min.js")" type="text/javascript"></script>
}
