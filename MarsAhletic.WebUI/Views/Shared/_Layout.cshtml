                                </ul>

                                @using (@Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                                {
                                    @Html.AntiForgeryToken()
                                }

                            </li>
                        </ul>
                    </div>
                    <!--/.nav-collapse -->
                </div>
            </div>
        </div>
        <!-- Top Bar End -->
        <!-- ========== Left Sidebar Start ========== -->

        <div class="left side-menu">
            <div class="sidebar-inner slimscrollleft">
                <!--- Divider -->
                <div id="sidebar-menu">
                    <ul>

                        <li class="text-muted menu-title">Menü</li>

                        @if (MarsAhletic.WebUI.Helpers.PermissionsHelper.CanAccessPurchasingModule(User.Identity.Name))
                        {
                            <li class="has_sub">
                                <a href="javascript:void(0);" class="waves-effect"><i class="ti-money"></i> <span> Satınalma Talepleri </span> <span class="menu-arrow"></span></a>
                                <ul class="list-unstyled">
                                    <li><a href="@Url.Action("CreateNewPurchaseOrder", "Dashboards")">Yeni Talep Oluştur</a></li>

                                    <li><a href="@Url.Action("AllPurchaseOrders", "Dashboards")">Talep Listesi</a></li>
                                    <li><a href="@Url.Action("Index", "Home")">Raporlar</a></li>
                                </ul>
                            </li>
