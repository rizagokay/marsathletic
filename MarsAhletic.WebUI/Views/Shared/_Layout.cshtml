        <!-- ============================================================== -->
        <!-- Start right Content here -->
        <!-- ============================================================== -->
        <div class="content-page">
            <!-- Start content -->
            <div class="content">
                <div class="container">
                    @RenderBody()
                </div> <!-- container -->

            </div> <!-- content -->

            <footer class="footer text-right">
                © 2017. Bütün hakları saklıdır.
            </footer>

